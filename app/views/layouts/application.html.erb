          <%= render '/layouts/userNavbar' %>
      <% else %>
          <%= render '/layouts/siteNavbar' %>
      <% end %>
    </header>
    

    <!-- flash messages -->
    <%= render '/layouts/flash' %>
    
    <%= yield %>

  </body>
</html>
