  <body>


    <header>
      <!-- navbar -->
      <% if user_signed_in? %>
          <%= render '/layouts/userNavbar' %>
      <% else %>
          <%= render '/layouts/siteNavbar' %>
      <% end %>
    </header>
    

    <!-- flash messages -->
    <%= render '/layouts/flash' %>
    
    <%= yield %>
  
  </body>

</html>
