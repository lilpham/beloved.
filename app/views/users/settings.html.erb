<div class="container-fuild settings">
	
	<div class="row row1">
		<div class="col-xs-4">
		</div>
		<div class="col-xs-4">
			<h1> Settings </h1>
			<hr class="style1">

		</div>
		<div class="col-xs-4">
		</div>
	</div>

	<div class="row">
		<div class="col-xs-3">
		</div>

		<div class="col-xs-3">

			<!-- Button trigger modal -->
		      <button type="button" class="btn btn-primary btn-lg helpbtn" data-toggle="modal" data-target="#help">
		        Need Help?
		      </button>

		        <!-- Modal -->
		        <div class="modal fade" id="help">
		          <div class="modal-dialog" role="document">
		            <div class="modal-content">
		              <div class="modal-header">
		                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		                <h4 class="modal-title expense-title">Let's Chat</h4>
		              </div>
		              <div class="modal-body">
		                <h4> <span class="glyphicon glyphicon-envelope"></span> &ensp; <i>hellobelovedapp@gmail.com</i> </h4>
		                <h4> <span class="glyphicon glyphicon-comment"></span>  &ensp; Click on the black chat bubble in the bottom right corner to chat with us! </h4>
		            </div><!-- /.modal-content -->
		          </div><!-- /.modal-dialog -->
		        </div><!-- /.modal --> 
		      </div>
		    </div>

		<div class="col-xs-3">
			<%= link_to user_account_path(current_user.name) do %>
				<button class="btn btn-primary btn-lg actbtn">Account </button>
			<% end %> 
		</div>


		<div class="col-xs-3">
		</div>
	</div>
	

</div>






