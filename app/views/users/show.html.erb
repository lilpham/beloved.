			<iframe src="https://embed.spotify.com/?uri=spotify%3Auser%3Abelovedco%3Aplaylist%3A7yD5cVeXFXbdBKwDDNCbeb" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
			</div>
			</div>

			<div class="col-xs-6 image-quote">
			<!--Image with Quote-->

			</div>
		</div>

		<!--Row 5 (12)-->
		<div class="row treat">
			<div class="col-xs-5">
			</div>

			<div class="col-xs-2" id="user-treat">
				<!-- TREAT -->
			<a class="btn btn-primary btn-lg btn-treat" href="/users/<%=@user.id%>/charges/new" role="button">
				Treat Yo'self 
			</a>
			</div>

			<div class="col-xs-5">
			</div>

		</div>

		<!--Row 6 (2,8,2) BLOG -->
