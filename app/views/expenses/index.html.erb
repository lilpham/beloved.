<h1>Budgeter</h1>

<% @expenses.each do |expense| %>
	<%= expense.category %>
	<%= expense.name %>
	<%= expense.description %>
	<%= expense.payer %>
	<%= expense.cost %>

	<%= link_to "Edit", edit_user_expense_path(@user,expense) %>
	<%= link_to "Delete", user_expense_path(@user,expense), method: :delete, data: { confirm: "Are you sure?" } %>
	<br>
<% end %>

<br>
<%= render 'expenseform' %>

<%= link_to "Add Expense", new_user_expense_path %>